{
    "extends" : ["react-app","prettier"],
    "plugins" : ["react","prettier", "react-hooks"],
    "rules" : {
        "prettier/prettier" : [
            "warn",
            {
                "arrowParens":"always",
                "semi":false,
                "trailingComma": "none",
                "tabWitdth": 2,
                "endOfLine": "auto",
                "useTabs": false,
                "singleQuote": true,
                "printWidth": 120,
                "jsxSingleQuote": true,
                "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
                "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
            }
        ]
    }
}